@model Roles
@{
    ViewData["Title"] = "Create Roles";
}
@using (Html.BeginForm("CreateRoleWithPermission", "Role", FormMethod.Post))
{

<div class="container mt-63">
		<h2 class="kt-portlet__head-title ml-5">Create Role</h2>
		<div class="grey-card container p-sm-3">
			<div class="white-card row m-2 pills-container">
				<div class="kt-container   kt-container--fluid  kt-grid__item kt-grid__item--fluid p-0">
					<div class="row user-form-padding">
						<div class="col-lg-12">
							<div class="kt-portlet">
								
								<form class="kt-form kt-form--fit kt-form--label-right m-t-30">
									<div class="kt-portlet__body">
										<div class="form-group row">
											<div class="form-group col-12 col-md-6">
												<label class="title">Name</label>
												<input asp-for="Name" class="form-control" style="width:500% !important;" />
												<span asp-validation-for="Name" class="text-danger"></span>
											</div>
										</div>
										<div class="form-group">
											<label for="permissions">Select Permission(s) for the Role:</label>
												@foreach (var permission in ViewBag.Permissions)
												{
						<div class="form-check">
							<input class="form-check-input" type="checkbox" id="permissions_@permission.Id" name="PermissionRoles" value="@permission.Id">
													<label class="form-check-label pl-2" for="permissions_@permission.Id">
								@permission.Name
							</label>
						</div>
					}
				</div>
					<button type="submit" class="btn p-15 btn-lg btn-primary pb-25 m-t-20">Create Role</button>
					</div>
			</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
}