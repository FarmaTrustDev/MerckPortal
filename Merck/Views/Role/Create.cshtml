@{
    ViewData["Title"] = "Create Roles";
}


<div class="container mt-4 bg-white mb-4">
	<h1>Create Role</h1>
	<div class="row mt-4">
		<div class="col-md-6">
			<form>
				<div class="form-group">
					<label for="rolename">Role Name:</label>
					<input type="text" class="form-control" id="rolename" placeholder="Enter role name">
				</div>
				<div class="form-group">
					<label for="permissions">Permissions:</label>
					<div class="form-check">
						<input class="form-check-input" type="checkbox" id="permission1" value="permission1">
						<label class="form-check-label" for="permission1">
							Read
						</label>
					</div>
					<div class="form-check">
						<input class="form-check-input" type="checkbox" id="permission2" value="permission2">
						<label class="form-check-label" for="permission2">
							Assign
						</label>
					</div>
					<div class="form-check">
						<input class="form-check-input" type="checkbox" id="permission3" value="permission3">
						<label class="form-check-label" for="permission3">
							write
						</label>
					</div>
				</div>
				<button type="submit" class="btn btn-primary">Create Role</button>
			</form>
		</div>
	</div>
</div>