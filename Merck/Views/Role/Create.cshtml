@model Roles
@{
    ViewData["Title"] = "Create Roles";
}
@using (Html.BeginForm("CreateRoleWithPermission", "Role", FormMethod.Post))
{
<div class="container mt-4 bg-white mb-4">
	<h2>Create Role</h2>
	<div class="row mt-4">
		<div class="col-md-6">
			<form>
				
				<div class="form-group">
					<label asp-for="Name" class="control-label"></label>
					<input asp-for="Name" class="form-control" />
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label for="permissions">Select Permission(s) for the Role:</label>
					@foreach (var permission in ViewBag.Permissions)
					{
						<div class="form-check">
							<input class="form-check-input" type="checkbox" id="permissions_@permission.Id" name="PermissionRoles" value="@permission.Id">
							<label class="form-check-label" for="permissions_@permission.Id">
								@permission.Name
							</label>
						</div>
					}
				</div>
				<button type="submit" class="btn btn-primary">Create Role</button>
			</form>
		</div>
	</div>
</div>
}