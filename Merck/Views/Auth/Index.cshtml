@model Merck.DTOS.Auth.AuthRequest

@{
    Layout = null;
    ViewData["Title"] = "Index";
}


@using (Html.BeginForm("Authenticate", "Auth", FormMethod.Post))
{
    <head>
        <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.0/jquery.validate.min.js"></script>
        <script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/jquery.validate.min.js"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/assets/css/site.css" />
        <link rel="stylesheet" href="~/css/style.css" />
        <link rel="stylesheet" href="~/assets/css/style.css" />
    <style>
            
            
    </style>
    </head>
    <body class="bg-color-light-gray">
        <section class="vh-100 ">
            <div class="container-fluid h-custom">
                <div class="row d-flex justify-content-center align-items-center h-100  m-t-40">
                    <div class="col-md-9 col-lg-6 col-xl-5">

                    </div>
                    <div class="col-md-8 col-lg-4 col-xl-4 offset-xl-1 card bg-white p-b-30 radius">


                        <h2 class="header-class">Login To Merck</h2>


                        <!-- Email input -->
                        <div class="form-outline mb-2 m-t-15">
                            <label>Username</label>
                            @Html.TextBoxFor(m=>m.Username, new {@class="form-control m-t-10", placeholder="Username"})
                        </div>

                        <!-- Password input -->
                        <div class="form-outline mb-3 m-t-15">
                            <lable>Password</lable>
                            @Html.PasswordFor(m=>m.Password, new {@class="form-control m-t-10", placeholder="Password"})
                        </div>

                        <div class="d-flex justify-content-between align-items-center m-t-20 display-flex">
                            <!-- Checkbox -->
                            <div class="form-check mb-0 text-left">
                                <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3" />
                                <label class="form-check-label" for="form2Example3">
                                    Remember me
                                </label>
                            </div>
                            <div class="text-right ml-30">
                            <a href="#!" class="text-body">Forgot password?</a>
                            </div>
                        </div>

                        <div class="text-center text-lg-start mt-4 pt-2 m-t-20">
                            <input type="submit" value="Login" class="theme-button-color button-class" />

                        </div>
                        
                    </div>
                </div>
            </div>

        </section>
    </body>
    
}
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
