@model Merck.DTOS.Auth.AuthRequest

@{
    Layout = null;
    ViewData["Title"] = "Index";
}


@using (Html.BeginForm("Authenticate", "Auth", FormMethod.Post))
{
    <head>
        <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.0/jquery.validate.min.js"></script>
        <script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/jquery.validate.min.js"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <link rel="stylesheet" href="~/css/style.css" />
    <style>
            .heading{
                background-color: #fcfcfc;
                width: 55%;
                margin: auto;
                margin-top: 2%;
                border-radius:10px;
            }
            .my-custom-class {
                width:90%;
                height:50px;
                margin-left:5%;
                border-radius: 8px;
            }
            .header-class{
                padding-top:3%;
                padding-bottom:2%;
                color:#000;
                font-weight:bold;
                text-align:center;
            }
            .button-class {
                width: 42%; 
                margin-bottom: 1%;
                border-radius:8px;
                height: 50px;
                margin-left: 5%;
            }
            .ml-class{
                margin-left:5%;
                margin-bottom:1%
            }
            .mt-class{
                margin-top:2%;
            }
            .txt-style{
                color:#000;
                font-weight:bold;
            }
            .txt-forgot-style {
                color: #000;
                font-weight: bold;
                padding-bottom:3%;
                text-align:center;
            }
            
    </style>
    </head>
    <body >
        <main role="main" class=" pb-3">
            <div class="heading">
                <h2 class="header-class">Login To Merck</h2>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Username, new {@class = "my-custom-class", placeholder="Username"})
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @Html.PasswordFor(m => m.Password, new {@class = "my-custom-class", placeholder="Password"})
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-check ml-class">
                    <input class="form-check-input" type="checkbox" id="myCheckbox" name="myCheckbox">
                    <label class="form-check-label txt-style" for="myCheckbox">Remember me</label>
                </div>
                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-primary button-class txt-style" />
                    <input type="submit" value="Create New Account" class="btn button-class txt-style" />
                </div>
                <div class="txt-forgot-style">
                   <a href="#"> Forgot Password? </a>
                </div>
            </div>
        </main>
    </body>
}
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
