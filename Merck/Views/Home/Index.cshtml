@using Microsoft.AspNetCore.Http;
@using Newtonsoft.Json;
@model Merck.DTOS.Auth.AuthResponse
@inject IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "View";
    string rolesJson = HttpContextAccessor.HttpContext.Session.GetString("roles");
    List<string> roles = null;
    string concatenated = "";
    if (rolesJson != null)
    {
        roles = JsonConvert.DeserializeObject<List<string>>(rolesJson);
        concatenated = string.Join(",", roles);
    }
}

<div class="container homePage">
    <article class="article">
        <h1 class="heading"><strong>Welcome To @concatenated  Portal</strong></h1>
    </article>
    <div class="row grey-card p-4 ">
        <div class=" col-12 col-md-5">
            <script src="https://cdnjs.com/libraries/Chart.js" type="text/javascript" crossorigin="anonymous"></script>
            <div class="white-card statistic_card    card-blue-hover horizontal-card col-12" style="height: 120px; ">
                <div class="white-card col-md-12 row  mt-2 statistics-text">
                    
                    @Html.DropDownList("Device", (SelectList)ViewBag.Devices, new{@class="form-control TreatmentDropdown float-right select2-hidden-accessible m-r", id="deviceDropDown", @onchange="onChangeDropDown(Id)"})
                    
                    <div class="col-md-4">
                        <div class="chartjs-size-monitor"><div class="chartjs-size-monitor-expand"><div class=""></div></div><div class="chartjs-size-monitor-shrink"><div class=""></div></div></div>
                        <canvas id="myChart" style="display: block; height: 78px; width: 78px;" width="62" height="62" class="chartjs-render-monitor"></canvas>
                    </div>
                    <div class="col-md-8 pt-5 statistics-text">
                        <span class="line"></span>
                        <input id="totalTransmission" value="totalTransmission" style="border: none;background: initial;" />
                        <br>
                        <span id="TreatmentHeading" class="pr-9" >No Of Transmission</span>
                    </div>
                    <hr>
                    <br>
                    
                    <div class="white-card col-md-6 p-4 statistics-text statistics-text-alignment">
                        <span class="inProcess"></span>
                        <input class="pl-5" id="distributionPerCountry" name="distributionPerCountry" style="border: none;background: initial;" />
                        <br>
                        <br>
                        Distribution Per Country
                    </div>
                    <div class="white-card col-md-6 p-4 statistics-text">
                        <span class="booked"></span>
                        <input type="text" class="pl-5" id="attacksBlocks" value="attacksBlocks" style="border: none;background: initial;" />
                        <br>
                        <br>
                        Overall No. Of Attacks Blocks
                    </div>
                    <div class="white-card col-md-6 p-4 statistics-text statistics-text-alignment">
                        <span class="spoilage"></span>
                        <input class="pl-5" id="transmissionError" value="transmissionError" style="border: none;background: initial;" />
                        <br>
                        <br>
                        Transmission Error
                    </div>
                </div>
            </div>

            <script type="module" src="/js/statistics/statistics.js?v=_kAYCs0w8x11_GjGfkXCpWk2Q40v5PnOXY-El1UeMMw"></script>

        </div>
        <div class="col-12 col-md-6 order1">
            <div class="white-card col-md-12 row statistics-text ">
                <div class="white-card col-md-12 row Hospital   statistics-text" style=" width: 92%;">
                    <span>Country-wise Transmissions</span>
                </div>
                <div class="col-md-12">
                    <ul style="list-style: none;padding: 0;" id="treatmentList">
                        @foreach (var item in ViewBag.Country){
                            var imgName = @item.DeviceType + ".png";
                            <li class="liStyle">
                            <div class="float-left pr-5 treatmentCount">@item.NoOfTransmission</div>
                            <span class="mt-3 " style="padding: 12px; vertical-align: middle; display: flex; padding-top: 0px; ">
                                <img src="../images/v2/@imgName" style="width:25px; height:25px; padding-right:5px"> @item.DeviceType
                            </span>
                        </li>
                        }
                        </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>
<script>
    $('select').on('change', function () {
        // Do work
        onChangeDropDown($(this).val())
    });
        var distribution = null;
        var attacks = null;
        var tranmission = null;
     function onChangeDropDown(deviceId)
    {
        $.ajax({
            type:"GET",
            async: true,
            url: "/Home/GetStats",
            data:{deviceId : deviceId},
                    success: function (data) {
                    distribution = data.distribution;
                    attacks = data.overallAttacks;
                    tranmission = data.noOfTransmission;
                    console.log(data,"statsData");
                $("#totalTransmission").val(data.noOfTransmission);
                $("#transmissionError").val(data.transmissionError);
                $("#attacksBlocks").val(data.overallAttacks);
                $("#distributionPerCountry").val(data.distribution);
                var yValues = [distribution, tranmission, attacks];
                var barColors = [
                    "#2255c2",
                    "#f4b71a",
                    "#fa6363",
                ];

                new Chart("myChart", {
                    type: "doughnut",
                    data: {
                        datasets: [{
                            backgroundColor: barColors,
                            data: yValues
                        }]
                    },
                    options: {
                        plugins: {
                            title: {
                                display: false,
                                showTooltips: false
                            }
                        },
                        hover: { mode: null },
                    }
                });
                    }
        });
    }
    var deviceSelect = document.getElementById("deviceDropDown");
    deviceSelect.options[1].selected = true;
    //console.log(deviceSelect.options[1].value,"dropdown default selected value");
    onChangeDropDown(deviceSelect.options[1].value);
</script>
